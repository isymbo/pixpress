{{template "base/header" .}}

<!--Main layout-->
<main class="main">
	<!-- Breadcrumb-->
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
		  <a href="user/home">我的</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">
			资料
		</li>
	</ol>

	<div class="container-fluid">
  	<div class="animated fadeIn">
			<div class="row justify-content-center">
				<div class="col-md-6">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
								我的资料
						</div>
						<div class="card-body">
							<div class="row justify-content-center my-4">
									<div class="avatar-lg">
                  	<img class="img-avatar" src="img/avatars/boy.png" alt="{{.LoggedUserName}}">
                	</div>
							</div>
							<table class="table table-responsive-sm table-flush">
								<tbody>
									<tr>
										<td>用户名称</td>
										<td>{{.LoggedUserName}}</td>
									</tr>
									<tr>
										<td>用户 ID</td>
										<td>{{.LoggedUserID}}</td>
									</tr>
									<tr>
										<td>注册时间</td>
										<td>{{DateFmt .LoggedUser.CreatedUnix}}</td>
									</tr>
									<tr>
										<td>姓名</td>
										<td>{{.LoggedUser.DisplayName}}</td>
									</tr>
									<tr>
										<td>电子邮件</td>
										<td>{{.LoggedUser.Email}}</td>
									</tr>
									<tr>
										<td>手机号码</td>
										<td>{{.LoggedUser.Mobile}}</td>
									</tr>
									<tr>
										<td>LDAP UID</td>
										<td>{{.LoggedUser.LDAPUID}}</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</main>
<!--Main layout-->

{{template "base/footer" .}}

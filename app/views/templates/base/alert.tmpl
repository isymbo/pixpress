{{if .Flash.ErrorMsg}}
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		{{.Flash.ErrorMsg | Str2html}}
		<button class="close" type="button" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">×</span>
		</button>
	</div>
{{end}}

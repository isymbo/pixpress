{{template "base/header" .}}

<!--Main layout-->
<main class="main">
	<!-- Breadcrumb-->
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
		  <a href="user/home">我的</a>
		</li>
		<li class="breadcrumb-item active" aria-current="page">
			新建作品
		</li>
	</ol>

	<div class="container-fluid">
  	<div class="animated fadeIn">
			<div class="row justify-content-center">
				<div class="col-md-8">
					{{template "base/alert" .}}


					<form class="form-horizontal" action="{{.Link}}/cover" method="post" enctype="multipart/form-data">
						<div class="card">
							<!-- Breadcrumb-->
							<ol class="breadcrumb">
								<li class="breadcrumb-item active" aria-current="page">
									上传封面
								</li>
							</ol>
							<div class="card-body">
								<div class="form-group row">
									<label class="col-md-3 col-form-label" for="file-input">上传封面图片</label>
									<div class="col-md-9">
										<input id="file-input" type="file" name="CoverImg">
									</div>
								</div>
								<hr class="my-4">
								<div class="row align-items-center">
										<div class="col-md-4 text-center">
											<button class="btn btn-primary btn-block" type="submit">
												<i class="fa fa-dot-circle-o"></i> 上传</button>
										</div>
								</div>
							</div>
						</div>
					</form>

					<form class="form-horizontal" action="{{.Link}}" method="post" enctype="multipart/form-data">
						<div class="card">
							<!-- Breadcrumb-->
							<ol class="breadcrumb">
								<li class="breadcrumb-item active" aria-current="page">
									作品信息
								</li>
							</ol>

							<div class="card-body was-validated">
								<div class="form-group row">
									<div class="col-sm-12">
										<input class="form-control is-invalid" type="text" name="Title" placeholder="请输入作品名称" required="">
									</div>
								</div>
								<div class="form-group row">
									<div class="col-md-12">
										<textarea class="form-control is-invalid" name="Content" rows="12" placeholder="作品说明" required=""></textarea>
									</div>
								</div>
							</div>
						</div>

						<div class="card">
							<!-- Breadcrumb-->
							<ol class="breadcrumb">
								<li class="breadcrumb-item active" aria-current="page">
									上传附件
								</li>
							</ol>
							<div class="card-body">
								<div class="form-group row">
									<label class="col-md-3 col-form-label" for="file-input">上传打包文件</label>
									<div class="col-md-9">
										<input id="file-input" type="file" name="file-input">
									</div>
								</div>
							</div>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="row align-items-center">
										<div class="col-md-6 text-center">
											<button class="btn btn-primary btn-block" type="submit">
												<i class="fa fa-dot-circle-o"></i> 发布</button>
										</div>
										<div class="col-md-6 text-center">
											<button class="btn btn-danger btn-block" type="reset">
												<i class="fa fa-ban"></i> 重置</button>
										</div>
								</div>
							</div>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>

</main>
<!--Main layout-->

{{template "base/footer" .}}
